<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flighty</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/mineStyle.css" />
</head>
<body>
    <header>
        <a class="navbar-brand navbar-pls" asp-area="" asp-controller="Home" asp-action="Index">Flighty</a>
        <a class="navbar-brand" href="/">
            <div class="logo-image">
                <img src="~/Img/a.png" class="img-fluid">
            </div>
        </a>
        <nav>
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="" asp-controller="Airports" asp-action="">Airports</a></li>
                <li><a asp-area="" asp-controller="Airlines" asp-action="">Airlines</a></li>
                <li><a asp-area="" asp-controller="Flights" asp-action="">Flights</a></li>
            </ul>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>